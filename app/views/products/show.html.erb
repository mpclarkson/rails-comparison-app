<% provide(:title, @product.product_name) %>
<% provide(:description, @product.description[0,70]) %>
<%= render 'layouts/jumbotron_well' %>
<div class="container" id="listings-page">
  <div class="row">
    <div class="col-sm-12 listing-wrapper listings-top listings-bottom">
      <br />
      <br />

      <div class="row">

      </div>

      <div class="row">

        <div class="col-sm-7">
          <h1><%= @product.product_name %></h1>
          <!--<p>Brand: <%= @product.brand.name %></p>-->
        </div>


        <div class="col-sm-5">

          <p class="price"><%= @product.display_price %></p>

        </div>

      </div>

      <div class="row">

      <div class="col-sm-7">
        <div class="row">
          <!--Share buttons-->
        </div>
      </div>


    </div>
    <hr />


      <div class="row">

        <div class="col-sm-7">

          <h3>Product Details</h3>

          <div class="row">

            <div class="col-xs-6">
              <table class="table">

                <tbody>
                <tr>
                  <th>Brand</th>
                  <td><%= @product.brand.name %></td>
                </tr>
                <tr>
                  <th>Vendor</th>
                  <td><%= @product.merchant.name %></td>
                </tr>

                </tbody>
              </table>
            </div>
            <div class="col-xs-6">
              <table class="table">

                <tbody>
                <tr>
                  <th>Price</th>
                  <td><%= @product.display_price %></td>
                </tr>
                <tr>
                  <th></th>
                  <td></td>
                </tr>

                </tbody>
              </table>
            </div>
          </div>
          <p>
            <%= @product.description.force_encoding("utf-8") %>
            <br />
            <br />
            <%= link_to 'Buy From Vendor', @product.aw_deep_link, class: 'btn btn-warning', rel: 'nofollow'%>
          </p>

          <!--<p>-->
            <!--<span class="classified_links ">-->
                <!--<a class="link-info" href="#"><i class="fa fa-share"></i> Share</a>&nbsp;-->
