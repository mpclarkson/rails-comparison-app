          <!--</p>-->

        </div>

        <div class="col-sm-5 center zoom-gallery">
          <div class="row center">

            <div class="col-sm-12">
              <%= image_tag(@product.aw_image_url, alt: @product.product_name, class: 'raised img-responsive', style: "margin: 0 auto") %>
              <br />
            </div>
          </div>
          <br />
          <div class="col-sm-12" style="text-align: center; margin: 0 auto">
            <%= link_to 'Buy From Vendor', @product.aw_deep_link, class: 'btn btn-warning', rel: 'nofollow'%>
            <br />
            <br />
            <p><%= @product.display_price %></p>
          </div>
          <br />

        </div>

      </div>

