<% provide(:title, "Home") %>
<% provide(:description, "Search and compare pricing on #{@products_count} cycling products from #{@brands_count} cycling brands, in one place") %>
<div class="jumbotron home-search" style="">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <br />
        <p class="main_description">Compare <strong><%= number_with_delimiter(@products_count, :delimiter => ',') %></strong> cycling products from <strong><%=  number_with_delimiter(@brands_count, :delimiter => ',') %></strong> brands, in one place</p>

        <br /><br />

        <%= form_tag products_path, method: :get do %>

            <div class="row">

              <div class="col-sm-8 col-sm-offset-2" style="text-align: center">

                <div class="row">

                  <div class="col-sm-10 col-sm-offset-1">
                    <div class="input-group">
                      <span class="input-group-addon input-group-addon-text"></span>

                      <%= render 'layouts/search_form_field' %>

                    </div>
                  </div>
                </div>

                <br />
                <br />

                <div class="row">
                  <input type="submit" value="Search" class="btn btn-primary search-btn">
                </div>

              </div>

            </div>

        <% end %>

        <br />
        <br />

      </div>
    </div>
  </div>
</div>