<%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], class: 'form-control col-sm-3', placeholder: "Find cycling products (e.g. Specialized, Helmet, Light)..." %>
    <%= submit_tag "Search", :name => nil, class: 'btn btn-primary search-btn' %>
<% end %>
