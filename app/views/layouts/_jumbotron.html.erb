
<div class="jumbotron home-search" style="">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <br />
        <p class="main_description">Compare prices on 150,000+ cycling products, in one place</p>

        <br /><br />

        <%= form_tag products_path, method: :get do %>

        <div class="row">

          <div class="col-sm-8 col-sm-offset-2" style="text-align: center">

            <div class="row">

              <div class="col-sm-10 col-sm-offset-1">
                <div class="input-group">
                  <span class="input-group-addon input-group-addon-text"></span>

                  <input type="search" name="search[q]" class="form-control col-sm-3" placeholder="Find cycling products (e.g. Specialized, Helmet, Light)..." value="<%= (params[:search].present? && params[:search][:q].present?) ? params[:search][:q] : "" %>">

                </div>
              </div>
            </div>

            <br />
            <br />

            <div class="row">
              <input type="submit" value="Search" class="btn btn-primary search-btn">
            </div>

          </div>

        </div>

        <% end %>

        <br />
        <br />

      </div>
    </div>
  </div>
</div>